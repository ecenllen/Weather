<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_adapter_bg_selector"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hdp_120.0">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv"
        android:layout_width="@dimen/wdp_110.0"
        android:layout_height="@dimen/hdp_110.0"
        android:layout_marginTop="@dimen/hdp_5.0"
        android:layout_marginBottom="@dimen/hdp_5.0"
        android:layout_marginLeft="@dimen/wdp_5.0"
        fresco:placeholderImage="@drawable/ic_logo"
        fresco:placeholderImageScaleType="fitXY"/>
    <ImageView
        android:id="@+id/ad_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ad_log"
        android:layout_marginTop="@dimen/hdp_5.0"
        android:layout_alignRight="@id/sdv"/>
    <Button
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tuijian_button_selector"
        android:text="下载"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/hdp_5.0" />
    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hdp_120.0"
        android:layout_toRightOf="@id/sdv"
        android:layout_toLeftOf="@id/btn_download"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/hdp_10.0"
        android:paddingRight="@dimen/hdp_10.0"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/sp_15.0"
            android:gravity="center_horizontal"
            android:text="九游-破解破解正版游戏大全"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#313131"
            android:textSize="@dimen/sp_12.0"
            android:text="九游-破解破解正版游戏大全九游-破解破解正版游戏大全"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c1c1c1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>